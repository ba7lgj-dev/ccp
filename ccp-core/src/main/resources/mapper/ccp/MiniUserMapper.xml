<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ba7lgj.ccp.core.mapper.MiniUserMapper">

    <resultMap id="MiniUserResult" type="org.ba7lgj.ccp.common.domain.MiniUser">
        <id column="id" property="id" />
        <result column="open_id" property="openId" />
        <result column="union_id" property="unionId" />
        <result column="nick_name" property="nickName" />
        <result column="avatar_url" property="avatarUrl" />
        <result column="phone" property="phone" />
        <result column="student_no" property="studentNo" />
        <result column="real_name" property="realName" />
        <result column="gender" property="gender" />
        <result column="status" property="status" />
        <result column="auth_status" property="authStatus" />
        <result column="auth_fail_reason" property="authFailReason" />
        <result column="review_by" property="reviewBy" />
        <result column="review_time" property="reviewTime" />
        <result column="admin_remark" property="adminRemark" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <sql id="selectMiniUserColumns">
        select id, open_id, union_id, nick_name, avatar_url, phone, student_no, real_name, gender, status, auth_status,
               auth_fail_reason, review_by, review_time, admin_remark, create_time, update_time
        from ccp_mini_user
    </sql>

    <select id="selectMiniUserById" parameterType="long" resultMap="MiniUserResult">
        <include refid="selectMiniUserColumns" />
        where id = #{id}
    </select>

    <select id="selectMiniUserByOpenId" parameterType="string" resultMap="MiniUserResult">
        <include refid="selectMiniUserColumns" />
        where open_id = #{openId}
    </select>

    <select id="selectMiniUserList" parameterType="org.ba7lgj.ccp.common.dto.MiniUserQueryDTO" resultMap="MiniUserResult">
        <include refid="selectMiniUserColumns" />
        <where>
            <if test="nickName != null and nickName != ''">
                and nick_name like concat('%', #{nickName}, '%')
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
            <if test="studentNo != null and studentNo != ''">
                and student_no = #{studentNo}
            </if>
            <if test="status != null">
                and status = #{status}
            </if>
            <if test="authStatus != null">
                and auth_status = #{authStatus}
            </if>
            <if test="createTimeStart != null">
                and create_time &gt;= #{createTimeStart}
            </if>
            <if test="createTimeEnd != null">
                and create_time &lt;= #{createTimeEnd}
            </if>
        </where>
        order by id desc
    </select>

    <select id="selectMiniUserExportList" parameterType="org.ba7lgj.ccp.common.dto.MiniUserQueryDTO" resultMap="MiniUserResult">
        <include refid="selectMiniUserList" />
    </select>

    <insert id="insertMiniUser" parameterType="org.ba7lgj.ccp.common.domain.MiniUser" useGeneratedKeys="true" keyProperty="id">
        insert into ccp_mini_user(open_id, union_id, nick_name, avatar_url, phone, student_no, real_name, gender, status,
                                  auth_status, auth_fail_reason, review_by, review_time, admin_remark, create_time, update_time)
        values (#{openId}, #{unionId}, #{nickName}, #{avatarUrl}, #{phone}, #{studentNo}, #{realName}, #{gender}, #{status},
                #{authStatus}, #{authFailReason}, #{reviewBy}, #{reviewTime}, #{adminRemark}, #{createTime}, #{updateTime})
    </insert>

    <update id="updateMiniUser" parameterType="org.ba7lgj.ccp.common.domain.MiniUser">
        update ccp_mini_user
        <set>
            <if test="unionId != null">union_id = #{unionId},</if>
            <if test="nickName != null">nick_name = #{nickName},</if>
            <if test="avatarUrl != null">avatar_url = #{avatarUrl},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="studentNo != null">student_no = #{studentNo},</if>
            <if test="realName != null">real_name = #{realName},</if>
            <if test="gender != null">gender = #{gender},</if>
            <if test="status != null">status = #{status},</if>
            <if test="authStatus != null">auth_status = #{authStatus},</if>
            <if test="authFailReason != null">auth_fail_reason = #{authFailReason},</if>
            <if test="reviewBy != null">review_by = #{reviewBy},</if>
            <if test="reviewTime != null">review_time = #{reviewTime},</if>
            <if test="adminRemark != null">admin_remark = #{adminRemark},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime}</if>
        </set>
        where id = #{id}
    </update>

    <delete id="deleteMiniUserById" parameterType="long">
        delete from ccp_mini_user where id = #{id}
    </delete>

    <delete id="deleteMiniUserByIds" parameterType="long">
        delete from ccp_mini_user where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>

<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ba7lgj.ccp.miniprogram.mapper.GateMapper">
    <resultMap id="GateResult" type="org.ba7lgj.ccp.miniprogram.domain.Gate">
        <id property="id" column="id" />
        <result property="campusId" column="campus_id" />
        <result property="gateName" column="gate_name" />
        <result property="latitude" column="latitude" />
        <result property="longitude" column="longitude" />
        <result property="sort" column="sort" />
        <result property="status" column="status" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <select id="selectEnabledGatesByCampus" parameterType="long" resultMap="GateResult">
        SELECT * FROM ccp_school_gate WHERE campus_id = #{campusId} AND status = 1 ORDER BY sort ASC, id ASC
    </select>
</mapper>

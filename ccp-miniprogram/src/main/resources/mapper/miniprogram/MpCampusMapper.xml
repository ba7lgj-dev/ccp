<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.ba7lgj.ccp.miniprogram.mapper.MpCampusMapper">
    <resultMap id="CampusResult" type="org.ba7lgj.ccp.miniprogram.domain.MpCampus">
        <id property="id" column="id" />
        <result property="schoolId" column="school_id" />
        <result property="campusName" column="campus_name" />
        <result property="address" column="address" />
        <result property="status" column="status" />
        <result property="createTime" column="create_time" />
        <result property="updateTime" column="update_time" />
    </resultMap>

    <select id="selectEnabledCampusBySchool" parameterType="long" resultMap="CampusResult">
        SELECT * FROM ccp_school_campus WHERE school_id = #{schoolId} AND status = 1 ORDER BY campus_name ASC
    </select>
</mapper>

.login-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f7f7f7;
}

.login-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  margin-bottom: 40rpx;
  background-color: #ffffff;
}

.title {
  font-size: 40rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 80rpx;
}

.login-button {
  width: 80%;
  height: 88rpx;
  border-radius: 44rpx;
  line-height: 88rpx;
  font-size: 32rpx;
}

.bottom-area {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  text-align: center;
}

.agreement {
  font-size: 24rpx;
  color: #999999;
}

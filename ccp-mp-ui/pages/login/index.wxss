.login-page {
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

.hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 48rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.app-name {
  font-size: 40rpx;
  font-weight: 700;
}

.subtitle {
  font-size: 28rpx;
  color: #6b778c;
}

.hint {
  font-size: 24rpx;
  color: #f5a623;
}

.intro {
  margin-top: 8rpx;
}

.intro-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.intro-desc {
  font-size: 26rpx;
  color: #6b778c;
}

.login-btn {
  margin: 24rpx;
}

.agreements {
  text-align: center;
  margin-top: 16rpx;
  color: #6b778c;
}

.link {
  color: #2f86f6;
  text-decoration: underline;
}

page {
  background: #f6f7fb;
  min-height: 100vh;
}

.page {
  padding: 24rpx;
}

.section {
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #333;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.04);
  margin-bottom: 16rpx;
}

.title {
  font-size: 30rpx;
  color: #222;
}

.meta {
  margin-top: 8rpx;
  color: #666;
  font-size: 26rpx;
}

.empty {
  padding: 30rpx 0;
  text-align: center;
  color: #888;
  font-size: 28rpx;
}

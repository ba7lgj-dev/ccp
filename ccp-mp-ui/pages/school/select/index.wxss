.school-page {background-color:#f7f7f7; min-height:100vh;}
.search-bar {position:fixed; top:0; left:0; right:0; padding:16rpx 24rpx; background-color:#ffffff; z-index:10; box-shadow:0 2rpx 4rpx rgba(0,0,0,0.04);}
.search-bar input {width:100%; height:64rpx; background-color:#f2f2f2; border-radius:32rpx; padding:0 24rpx; font-size:28rpx;}
.school-list {margin-top:96rpx; padding-bottom:20rpx;}
.school-item {display:flex; flex-direction:row; align-items:center; padding:20rpx 24rpx; background-color:#ffffff; border-bottom:1rpx solid #f0f0f0;}
.school-logo {width:96rpx; height:96rpx; border-radius:8rpx; margin-right:20rpx; background-color:#eaeaea;}
.school-info {flex:1;}
.school-name {font-size:32rpx; color:#333333; font-weight:600;}
.school-city {font-size:24rpx; color:#999999; margin-top:6rpx;}

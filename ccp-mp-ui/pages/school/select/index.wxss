.school-page {
  padding: 20rpx 24rpx;
}

.search-bar input {
  background: #fff;
  padding: 16rpx 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.04);
}

.school-list {
  max-height: 80vh;
  margin-top: 20rpx;
}

.school-item {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.04);
}

.school-name {
  font-size: 30rpx;
  font-weight: 600;
}

.school-city {
  font-size: 24rpx;
  color: #6b778c;
  margin-top: 4rpx;
}

.empty {
  margin: 120rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  color: #6b778c;
}

.empty-text {
  font-size: 26rpx;
  text-align: center;
}

.page { padding: 16px; }
.tabs { display: flex; margin-bottom: 12px; }
.tab { flex: 1; text-align: center; padding: 8px 0; border-bottom: 2px solid #eee; }
.tab.active { color: #07c160; border-color: #07c160; }
.panel { background: #fff; padding: 12px; border-radius: 8px; }
.card { border: 1px solid #f0f0f0; padding: 10px; border-radius: 8px; margin-bottom: 10px; }
.card-title { font-weight: bold; }
.card-desc { color: #666; margin: 4px 0; }
.card-status { color: #07c160; }
.card-reason { color: #f56c6c; }
.picker { padding: 10px; border: 1px solid #eee; border-radius: 6px; margin-bottom: 10px; }
.form-item { display: flex; align-items: center; margin-bottom: 10px; }
.label { width: 80px; color: #666; }
.input { flex: 1; padding: 8px; border: 1px solid #eee; border-radius: 6px; }
.upload { margin: 10px 0; }
.preview { width: 100%; height: 160px; border-radius: 8px; background: #f5f5f5; }
.submit { margin-top: 12px; }
.hint { color: #666; text-align: center; padding: 20px 0; }
.modal { position: fixed; left: 0; right: 0; top: 0; bottom: 0; background: rgba(0,0,0,0.4); display: flex; align-items: center; justify-content: center; }
.modal-body { background: #fff; padding: 16px; border-radius: 8px; width: 80%; }
.modal-title { font-weight: bold; margin-bottom: 8px; }
.modal-actions { display: flex; justify-content: flex-end; gap: 8px; margin-top: 12px; }

page {
  background: #f6f7fb;
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(17, 31, 44, 0.05);
  margin-bottom: 24rpx;
}

.status-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.status-tag {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  color: #fff;
  background: #07c160;
}

.status-1, .status-2 { background: #f6a623; }
.status-3 { background: #888; }
.status-4, .status-5 { background: #ccc; }

.address-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
}

.arrow { color: #999; }

.time-row { margin-top: 12rpx; color: #555; }
.require { margin-top: 8rpx; color: #666; font-size: 26rpx; }

.member-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 12rpx; }
.member-header .title { font-size: 30rpx; font-weight: 600; }
.member-header .remain { font-size: 26rpx; color: #f6a623; }

.owner { display: flex; align-items: center; margin-bottom: 16rpx; }
.avatar { width: 88rpx; height: 88rpx; border-radius: 50%; background: #f2f2f2; }
.owner .avatar { margin-right: 16rpx; }
.owner-info { display: flex; flex-direction: column; }
.owner-info .name { font-size: 28rpx; color: #111; }
.owner-info .role { font-size: 24rpx; color: #999; }

.member-list { display: flex; flex-direction: column; gap: 12rpx; }
.member-item { display: flex; justify-content: space-between; align-items: center; padding: 12rpx 0; border-bottom: 1px solid #f4f4f4; }
.member-item:last-child { border-bottom: none; }
.member-main { display: flex; align-items: center; gap: 12rpx; }
.member-main .avatar { width: 72rpx; height: 72rpx; }
.info { display: flex; flex-direction: column; }
.info .name { font-size: 28rpx; color: #111; }
.info .meta { font-size: 24rpx; color: #999; }

.action-card button { margin-top: 8rpx; }
.hint { color: #999; font-size: 24rpx; }
.chat-entry { display: flex; gap: 16rpx; margin-top: 16rpx; }
.ghost-btn { flex: 1; background: #fff; color: #07c160; border: 1px solid #07c160; }
.chat-btn { flex: 1; border-radius: 12rpx; }
.chat-btn[disabled] { background: #cdd5df; color: #fff; border: none; }

.tip-title { font-size: 28rpx; font-weight: 600; color: #111; }
.tip-content { display: block; margin-top: 8rpx; color: #666; font-size: 26rpx; }

.loading, .empty { text-align: center; color: #999; margin-top: 120rpx; }

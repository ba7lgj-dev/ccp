.publish-page {background-color:#f7f7f7; min-height:100vh; padding:20rpx 24rpx 120rpx 24rpx; box-sizing:border-box;}
.campus-info {background-color:#ffffff; padding:20rpx 24rpx; border-radius:12rpx; font-size:28rpx; color:#333333; margin-bottom:20rpx;}
.picker-block {background-color:#ffffff; padding:20rpx 24rpx; border-radius:12rpx; margin-bottom:20rpx;}
.picker-display {display:flex; flex-direction:row; align-items:center; justify-content:space-between;}
.picker-label {font-size:28rpx; color:#333333;}
.picker-value {font-size:28rpx; color:#666666;}
.next-button {position:fixed; left:24rpx; right:24rpx; bottom:40rpx; height:88rpx; border-radius:44rpx; background-color:#07c160; color:#ffffff; line-height:88rpx; text-align:center; font-size:32rpx;}
.home-button {position:fixed; left:24rpx; right:24rpx; bottom:140rpx; height:80rpx; border-radius:40rpx; border:1px solid #07c160; color:#07c160; background-color:#ffffff; line-height:80rpx; text-align:center; font-size:30rpx;}

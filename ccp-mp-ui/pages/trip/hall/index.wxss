page {
  background: #f7f8fa;
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 34rpx;
  font-weight: 600;
  color: #111;
  display: block;
}

.desc {
  font-size: 26rpx;
  color: #777;
  margin-top: 6rpx;
  display: block;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 6rpx 18rpx rgba(17, 31, 44, 0.05);
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
}

.card-desc {
  font-size: 26rpx;
  color: #777;
  margin: 12rpx 0 20rpx;
  display: block;
}

.placeholder {
  font-size: 32rpx;
  font-weight: 600;
  color: #07c160;
  display: block;
}

.ghost {
  color: #07c160;
  border: 1px solid #07c160;
  margin-top: 10rpx;
}

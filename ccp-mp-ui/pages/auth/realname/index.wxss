.container {
  padding: 16px;
}
.user-card {
  display: flex;
  padding: 12px;
  background: #fff;
  border-radius: 8px;
  margin-bottom: 12px;
  align-items: center;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
}
.avatar {
  width: 56px;
  height: 56px;
  border-radius: 50%;
  margin-right: 12px;
}
.user-info .nick {
  font-size: 16px;
  font-weight: bold;
  display: block;
  margin-bottom: 4px;
}
.user-info .desc {
  font-size: 12px;
  color: #888;
}
.form-section {
  background: #fff;
  border-radius: 8px;
  padding: 12px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
}
.form-item {
  display: flex;
  align-items: center;
  margin-bottom: 12px;
}
.form-item .label {
  width: 80px;
  color: #333;
  font-size: 14px;
}
.form-item .input {
  flex: 1;
  padding: 8px 10px;
  border: 1px solid #eee;
  border-radius: 6px;
}
.form-item.upload {
  align-items: flex-start;
}
.upload-box {
  flex: 1;
}
.upload-btn {
  margin-top: 4px;
}
.upload-preview {
  width: 100%;
  height: 160px;
  border-radius: 6px;
  background: #f5f5f5;
}
.status-section {
  margin-top: 16px;
  padding: 12px;
  background: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
}
.hint {
  display: block;
  color: #666;
  margin-bottom: 10px;
}
.warning {
  color: #d68b00;
}
.success {
  color: #1aad19;
}
.error {
  color: #e54d42;
}
.primary {
  margin-top: 12px;
}

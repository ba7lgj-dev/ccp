.container {
  padding: 12px;
}
.tabs {
  display: flex;
  background: #fff;
  border-radius: 8px;
  overflow: hidden;
  margin-bottom: 10px;
}
.tab {
  flex: 1;
  text-align: center;
  padding: 10px 0;
  color: #666;
}
.tab.active {
  color: #1aad19;
  font-weight: bold;
  border-bottom: 2px solid #1aad19;
}
.list {
  height: calc(100vh - 120px);
}
.item {
  background: #fff;
  border-radius: 8px;
  padding: 12px;
  margin-bottom: 10px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
}
.title {
  font-size: 16px;
  font-weight: bold;
}
.sub {
  font-size: 13px;
  color: #666;
  margin-top: 4px;
}
.status {
  margin-top: 6px;
  font-size: 13px;
}
.status-1 {
  color: #d68b00;
}
.status-2 {
  color: #1aad19;
}
.status-3, .status-4 {
  color: #e54d42;
}
.fail {
  color: #e54d42;
  margin-top: 4px;
}
.empty {
  text-align: center;
  color: #999;
  margin-top: 20px;
}
.form {
  background: #fff;
  border-radius: 8px;
  padding: 12px;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.04);
}
.form-item {
  margin-bottom: 12px;
}
.label {
  display: block;
  font-size: 14px;
  margin-bottom: 6px;
}
.picker, .input {
  padding: 10px;
  border: 1px solid #eee;
  border-radius: 6px;
}
.upload-box {
  border: 1px dashed #ccc;
  border-radius: 6px;
  padding: 10px;
  text-align: center;
}
.upload-preview {
  width: 100%;
  height: 160px;
  border-radius: 6px;
  background: #f5f5f5;
}
.tips {
  color: #888;
  font-size: 12px;
  margin: 8px 0;
}
.primary {
  margin-top: 8px;
}

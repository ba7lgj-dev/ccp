page {
  background: #f6f7fb;
  min-height: 100vh;
}

.scroll {
  height: 100vh;
  box-sizing: border-box;
  padding: 24rpx;
}

.header {
  background: linear-gradient(135deg, #3fc1c9, #4fd1c5);
  padding: 32rpx 24rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 12rpx 36rpx rgba(63, 193, 201, 0.2);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  border: 4rpx solid rgba(255, 255, 255, 0.6);
}

.header-info {
  flex: 1;
  margin-left: 24rpx;
  color: #fff;
}

.nick {
  font-size: 34rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.status-line {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 12rpx;
  font-size: 24rpx;
}

.status {
  padding: 4rpx 12rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
}

.link {
  text-decoration: underline;
}

.card {
  background: #fff;
  border-radius: 18rpx;
  margin-top: 24rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.04);
}

.menu-item {
  padding: 24rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #f1f2f6;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-text {
  flex: 1;
}

.title {
  font-size: 30rpx;
  color: #111;
  font-weight: 600;
}

.sub {
  font-size: 24rpx;
  color: #888;
  margin-top: 6rpx;
}

.arrow {
  font-size: 32rpx;
  color: #c0c4cc;
}

.footer {
  margin-top: 30rpx;
}

.logout {
  width: 100%;
  color: #e54d42;
  background: #fff;
  border: 2rpx solid #e54d42;
  border-radius: 12rpx;
}

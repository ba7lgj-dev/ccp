page {
  background: #f6f7fb;
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(17, 31, 44, 0.05);
  margin-bottom: 20rpx;
}

.profile {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: #f2f2f2;
}

.info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.name {
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
}

.desc {
  font-size: 24rpx;
  color: #777;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
}

.card-desc {
  font-size: 26rpx;
  color: #666;
  margin: 12rpx 0 4rpx;
  display: block;
}

.row {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  gap: 12rpx;
}

.label {
  width: 120rpx;
  font-size: 26rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #111;
}

.link {
  border: 1px solid #07c160;
  color: #07c160;
}

.danger {
  margin-top: 12rpx;
}

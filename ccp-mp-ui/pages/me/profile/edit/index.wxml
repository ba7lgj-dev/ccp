<view class="page">
  <scroll-view scroll-y="true" class="scroll">
    <view class="avatar-section">
      <image class="avatar" src="{{avatarUrl || '/assets/default-school.png'}}" mode="aspectFill"></image>
      <view class="change-avatar" bindtap="onChangeAvatar">更换头像</view>
    </view>

    <view class="form-card">
      <view class="form-item">
        <view class="label">昵称</view>
        <input class="input" maxlength="20" value="{{nickName}}" placeholder="请输入昵称" bindinput="onNickInput" />
      </view>
      <view class="form-item">
        <view class="label">性别</view>
        <radio-group class="gender-group" bindchange="onGenderChange">
          <label class="gender-option">
            <radio value="0" checked="{{gender === 0}}" />保密
          </label>
          <label class="gender-option">
            <radio value="1" checked="{{gender === 1}}" />男
          </label>
          <label class="gender-option">
            <radio value="2" checked="{{gender === 2}}" />女
          </label>
        </radio-group>
      </view>
      <view class="form-item">
        <view class="label">真实姓名</view>
        <input class="input" maxlength="30" value="{{realName}}" placeholder="请输入真实姓名" bindinput="onRealNameInput" />
      </view>
      <!-- <view class="tip">实名认证功能暂未开放，当前仅保存名称，不做身份校验</view> -->
    </view>

    <view class="actions">
      <button class="primary" type="primary" bindtap="onSave" loading="{{saving}}" disabled="{{saving}}">保存</button>
      <button class="plain" bindtap="onCancel">取消</button>
    </view>
  </scroll-view>
</view>

page {
  background: #f6f7fb;
  min-height: 100vh;
}

.scroll {
  height: 100vh;
  box-sizing: border-box;
  padding: 24rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: #fff;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.change-avatar {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #07c160;
}

.form-card {
  background: #fff;
  border-radius: 18rpx;
  padding: 16rpx 24rpx 8rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.04);
}

.form-item {
  padding: 12rpx 0;
}

.label {
  font-size: 28rpx;
  color: #111;
  margin-bottom: 8rpx;
}

.input {
  width: 100%;
  padding: 16rpx 18rpx;
  box-sizing: border-box;
  background: #f7f8fa;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.gender-group {
  display: flex;
  gap: 24rpx;
  padding: 8rpx 0 0;
}

.gender-option {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #333;
}

.tip {
  font-size: 24rpx;
  color: #999;
  margin: 8rpx 0 12rpx;
}

.actions {
  margin-top: 28rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.primary {
  width: 100%;
}

.plain {
  width: 100%;
  background: #fff;
  border: 2rpx solid #dcdfe6;
  color: #666;
}

.page {
  min-height: 100vh;
  background: #f6f7fb;
  padding: 24rpx;
  box-sizing: border-box;
}

.tip {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.loading {
  text-align: center;
  padding: 40rpx 0;
  color: #888;
}

.status-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.status-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 8rpx;
  color: #111;
}

.status-desc {
  font-size: 26rpx;
  color: #666;
}

.status-1 .status-title {
  color: #f59e0b;
}

.status-2 .status-title {
  color: #16a34a;
}

.status-3 .status-title {
  color: #e11d48;
}

.form-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.05);
}

.form-item {
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.input {
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
}

.upload-section {
  padding: 16rpx 0;
}

.preview {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
  margin-bottom: 12rpx;
}

.upload-btn {
  background: #fff;
  border: 1rpx solid #3fc1c9;
  color: #3fc1c9;
  border-radius: 12rpx;
}

.action-area {
  margin-top: 24rpx;
}

.submit {
  width: 100%;
  border-radius: 12rpx;
}

.hint {
  margin-top: 16rpx;
  color: #888;
  font-size: 26rpx;
}

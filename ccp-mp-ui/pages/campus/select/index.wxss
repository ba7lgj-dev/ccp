.campus-page {background-color:#f7f7f7; min-height:100vh;}
.selected-school {padding:24rpx; background-color:#ffffff; font-size:28rpx; color:#333333; margin-bottom:16rpx;}
.campus-list {padding:0 20rpx 20rpx 20rpx;}
.campus-item {background-color:#ffffff; margin-top:16rpx; padding:20rpx 24rpx; border-radius:12rpx; box-shadow:0 4rpx 12rpx rgba(0,0,0,0.05);}
.campus-name {font-size:32rpx; font-weight:600; color:#333333;}
.campus-address {font-size:24rpx; color:#999999; margin-top:6rpx;}
.empty-tip {text-align:center; margin-top:80rpx; font-size:26rpx; color:#999999;}

.campus-page {
  padding: 20rpx 24rpx;
}

.header {
  margin: 0 0 16rpx;
}

.campus-list {
  max-height: 80vh;
}

.campus-item {
  background: #fff;
  padding: 20rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.04);
}

.campus-name {
  font-size: 30rpx;
  font-weight: 600;
}

.campus-address {
  font-size: 24rpx;
  color: #6b778c;
  margin-top: 6rpx;
}

.empty-tip {
  text-align: center;
  color: #6b778c;
  margin: 120rpx 0;
}

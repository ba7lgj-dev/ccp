<view class="campus-page">
  <view class="selected-school" wx:if="{{selectedSchool}}">
    已选择学校：{{selectedSchool.schoolName}}
  </view>
  <scroll-view class="campus-list" scroll-y="true">
    <view wx:if="{{campusList.length === 0}}" class="empty-tip">暂无校区信息</view>
    <view wx:for="{{campusList}}" wx:key="id" class="campus-item" bindtap="onSelectCampus" data-id="{{item.id}}">
      <text class="campus-name">{{item.campusName}}</text>
      <text class="campus-address">{{item.address}}</text>
    </view>
  </scroll-view>
</view>

.page {
  background: #f5f5f5;
  min-height: 100vh;
  padding: 32rpx 32rpx 48rpx;
  box-sizing: border-box;
}

.top-header {
  padding: 8rpx 8rpx 0;
}

.user-touch {
  background: #1677ff;
  color: #fff;
  border-radius: 20rpx;
  padding: 28rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 12rpx 26rpx rgba(22, 119, 255, 0.12);
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #fff;
}

.user-meta .greeting {
  font-size: 32rpx;
  font-weight: 700;
}

.user-meta .sub {
  margin-top: 8rpx;
  display: block;
  color: #e8f3ff;
  font-size: 24rpx;
}

.card {
  margin-top: 24rpx;
  padding: 28rpx;
  background: #fff;
  border-radius: 20rpx;
  box-sizing: border-box;
}

.card-shadow {
  box-shadow: 0 10rpx 24rpx rgba(0, 0, 0, 0.06);
}

.card-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #222;
}

.card-subtitle {
  font-size: 24rpx;
  color: #666;
}

.card-desc {
  color: #666;
  font-size: 26rpx;
  margin: 12rpx 0 16rpx;
}

.tag.weak {
  color: #999;
  font-size: 22rpx;
}

.primary-btn {
  width: 100%;
  border-radius: 28rpx;
  height: 92rpx;
  line-height: 92rpx;
  background: #1677ff;
}

.mini-switch {
  border: none;
  background: #eff5ff;
  color: #1677ff;
  border-radius: 999rpx;
}

.campus-card .campus-row {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.campus-card .label {
  color: #666;
}

.campus-card .value {
  color: #222;
  font-weight: 600;
}

.campus-card .value.warning {
  color: #f59a23;
}

.quick-card .quick-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-top: 20rpx;
}

.quick-item {
  background: #f8fbff;
  border-radius: 16rpx;
  padding: 24rpx 12rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  color: #222;
}

.quick-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #e8f1ff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
}

.quick-text {
  font-size: 26rpx;
  color: #333;
}

.trip-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-top: 12rpx;
  color: #222;
  font-weight: 600;
}

.trip-meta {
  margin-top: 8rpx;
  display: flex;
  justify-content: space-between;
  color: #666;
  font-size: 26rpx;
}

.status-tag {
  padding: 6rpx 16rpx;
  background: #e8f1ff;
  color: #1677ff;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.history-card .history-item {
  padding: 18rpx 16rpx;
  border-radius: 16rpx;
  background: #f9fafb;
  margin-top: 14rpx;
}

.history-main {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #222;
  font-weight: 600;
}

.history-meta {
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #666;
  font-size: 24rpx;
}

.status-chip {
  padding: 6rpx 14rpx;
  background: #eef5ff;
  color: #1677ff;
  border-radius: 999rpx;
  font-size: 22rpx;
}

.empty {
  padding: 32rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.8;
}

.empty-text {
  color: #888;
  font-size: 26rpx;
}

.skeleton {
  height: 120rpx;
  background: linear-gradient(90deg, #f6f7f8 25%, #edeef1 50%, #f6f7f8 75%);
  background-size: 400% 100%;
  border-radius: 16rpx;
  margin-top: 12rpx;
  animation: shimmer 1.6s infinite;
}

@keyframes shimmer {
  0% { background-position: 100% 0; }
  100% { background-position: -100% 0; }
}

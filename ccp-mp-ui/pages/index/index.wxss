page {
  background: #f6f7fb;
  min-height: 100vh;
  padding: 24rpx;
  box-sizing: border-box;
}

.hero {
  margin-bottom: 24rpx;
}

.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111;
  display: block;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
  margin-top: 8rpx;
  display: block;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(17, 31, 44, 0.05);
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #111;
  display: block;
}

.card-desc {
  font-size: 26rpx;
  color: #666;
  margin: 16rpx 0;
  display: block;
}

.user-row {
  display: flex;
  align-items: center;
  margin-top: 16rpx;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: #f2f2f2;
  margin-right: 16rpx;
}

.user-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.nickname {
  font-size: 28rpx;
  color: #111;
}

.uid {
  font-size: 24rpx;
  color: #999;
}

.selection-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
  border-bottom: 1px solid #f4f4f4;
}

.selection-row:last-child {
  border-bottom: none;
}

.label {
  font-size: 26rpx;
  color: #666;
}

.value {
  font-size: 28rpx;
  color: #111;
  font-weight: 500;
}

.actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.active-card .active-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  color: #111;
  margin: 12rpx 0;
}

.active-card .arrow { color: #999; }
.active-meta { display: flex; justify-content: space-between; color: #666; font-size: 26rpx; }
.active-meta .status { color: #07c160; }

.primary-btn {
  background: #07c160;
  color: #fff;
}

.ghost-btn {
  background: #fff;
  color: #07c160;
  border: 1px solid #07c160;
}

.history-card .card-title {
  margin-bottom: 12rpx;
}

.history-item {
  padding: 16rpx 0;
  border-bottom: 1px solid #f4f4f4;
}

.history-item:last-child {
  border-bottom: none;
}

.history-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  color: #444;
  font-size: 26rpx;
  line-height: 1.5;
}

.history-row.main {
  font-weight: 600;
  color: #111;
}

.history-row.time {
  color: #666;
  margin-top: 4rpx;
}

.history-row.status {
  color: #888;
  margin-top: 4rpx;
}

.history-row .address {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.owner-tag {
  background: #e6f7f0;
  color: #07c160;
  font-size: 22rpx;
  padding: 4rpx 10rpx;
  border-radius: 20rpx;
}

.empty-hint {
  display: block;
  text-align: center;
  color: #999;
  font-size: 26rpx;
  margin-top: 12rpx;
}

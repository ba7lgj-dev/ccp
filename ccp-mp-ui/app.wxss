page {
  background-color: #f7f8fa;
  color: #1f2d3d;
  font-family: 'PingFang SC', 'Hiragino Sans GB', Arial, sans-serif;
  min-height: 100vh;
}

.text-primary { color: #2f86f6; }
.text-success { color: #3eb575; }
.text-warning { color: #f5a623; }
.text-error { color: #ff4d4f; }
.text-secondary { color: #6b778c; }

.title-lg { font-size: 36rpx; font-weight: 600; }
.title-md { font-size: 32rpx; font-weight: 600; }
.text-body { font-size: 28rpx; }
.text-small { font-size: 24rpx; }

.btn-primary {
  background: linear-gradient(135deg, #2f86f6, #4ba6ff);
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 32rpx;
}
.btn-ghost {
  background: #fff;
  color: #2f86f6;
  border: 1px solid #2f86f6;
  border-radius: 12rpx;
  padding: 18rpx 30rpx;
}
.btn-danger {
  background: #ff4d4f;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  padding: 20rpx 32rpx;
}
.btn-disabled { opacity: 0.6; pointer-events: none; }

.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.04);
  padding: 24rpx;
  margin: 24rpx;
}
.card--flat { box-shadow: none; border: 1px solid #f0f0f0; }

.flex-row { display: flex; flex-direction: row; }
.flex-col { display: flex; flex-direction: column; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.space-between { display: flex; align-items: center; justify-content: space-between; }
.gap-8 { gap: 8rpx; }
.gap-12 { gap: 12rpx; }
.gap-16 { gap: 16rpx; }

.badge {
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  background: #f0f7ff;
  color: #2f86f6;
}

.section-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.shadow-fixed {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  box-shadow: 0 -6rpx 16rpx rgba(0, 0, 0, 0.08);
}
